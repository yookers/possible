{
    "$schema": "https://schema.tauri.app/config/2.0.0",
    "productName": "possible",
    "version": "0.1.0",
    "identifier": "com.possible.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../build"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "possible",
                "hiddenTitle": true,
                "titleBarStyle": "Overlay",
                "decorations": false,
                "minWidth": 800,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
